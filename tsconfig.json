{
  "compilerOptions": {
    "target": "es2016",                          
    "module": "commonjs",                    
    "allowJs": false,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,    
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
